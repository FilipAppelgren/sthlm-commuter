<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.SthlmTraveling" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary_dark</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="Theme.SthlmTraveling.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary_dark</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <!-- General styles -->
    <style name="AppBaseListView" parent="Widget.AppCompat.ListView">
        <item name="android:height">?attr/actionBarSize</item>
    </style>

    <style name="AppListView" parent="AppBaseListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:cacheColorHint">@color/background</item>-->
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <!--<item name="android:overScrollMode">never</item>-->
        <item name="android:overScrollHeader">@null</item>
    </style>

    <style name="Title" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/list_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/list_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/list_vertical_padding</item>
        <item name="android:paddingTop">@dimen/list_vertical_padding</item>
    </style>

    <style name="ListContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/list_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/list_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/list_vertical_padding</item>
        <item name="android:paddingTop">@dimen/list_vertical_padding</item>
    </style>

    <style name="AutoComplete">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:completionThreshold">3</item>
        <item name="android:layout_weight">1</item>
        <item name="android:dropDownVerticalOffset">5dip</item>
        <item name="android:dropDownWidth">fill_parent</item>
        <item name="android:ems">10</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:nextFocusDown">@+id/to</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">?android:attr/textColorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
    </style>

    <style name="Subtitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/list_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/list_horizontal_padding</item>
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
    </style>

</resources>
