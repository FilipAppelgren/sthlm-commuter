<LinearLayout
    style="@style/ListContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="0dip"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/favorite_journey_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="normal"
            tools:text="Midsommarkransen (Stockholm)"
            />

        <TextView
            android:id="@+id/favorite_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="normal"
            tools:text="Mariebergsgatan"
            />

        <TextView
            android:id="@+id/favorite_via_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="normal"
            tools:text="Mariebergsgatan"
            />

        <LinearLayout
            android:id="@+id/favorite_transport_modes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:addStatesFromChildren="true"
            android:gravity="center_vertical"
            android:paddingEnd="0dip"
            android:paddingRight="0dip">

            <ImageView
                android:id="@+id/favorite_transport_mode_metro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/ic_transport_sl_metro"
                />

            <ImageView
                android:id="@+id/favorite_transport_mode_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dip"
                android:paddingRight="8dip"
                android:src="@drawable/ic_transport_bus_20dp"
                />

            <ImageView
                android:id="@+id/favorite_transport_mode_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dip"
                android:paddingRight="8dip"
                android:src="@drawable/ic_transport_train_20dp"
                />

            <ImageView
                android:id="@+id/favorite_transport_mode_tram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dip"
                android:paddingRight="8dip"
                android:src="@drawable/ic_transport_light_train_20dp"
                />

            <ImageView
                android:id="@+id/favorite_transport_mode_wax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/ic_transport_boat_20dp"
                />

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/journey_star_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:button="@drawable/btn_check_star"
        android:buttonTint="@color/accent"
        android:focusable="false"/>

</LinearLayout>
