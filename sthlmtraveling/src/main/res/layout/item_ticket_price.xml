<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:background="?attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/ticket_zones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/list_horizontal_padding"
        android:layout_marginRight="@dimen/list_horizontal_padding"
        android:background="@drawable/zone_background"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/fare_text"
        android:textStyle="bold"
        tools:text="AB"
        />

    <TextView
        android:id="@+id/ticket_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ticket_zones"
        android:layout_toStartOf="@id/ticket_zones"
        android:background="@drawable/zone_buy_ticket_background"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/fare_text"
        tools:text="24 kr"
        />

    <TextView
        android:id="@+id/ticket_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/list_horizontal_padding"
        android:layout_marginLeft="@dimen/list_horizontal_padding"
        android:layout_marginRight="@dimen/list_horizontal_padding"
        android:layout_marginStart="@dimen/list_horizontal_padding"
        android:layout_toLeftOf="@id/ticket_price"
        android:layout_toStartOf="@id/ticket_price"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textColor="@color/body_text_1"
        tools:text="@string/sms_ticket_price_reduced"/>


</RelativeLayout>