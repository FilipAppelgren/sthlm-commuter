<LinearLayout style="@style/ListContainer"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginBottom="0dip"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TableRow
                android:layout_marginBottom="2dip"
                android:layout_marginTop="2dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/bullet_white"/>

                    <TextView
                        android:id="@+id/favorite_start_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:paddingLeft="8dip"
                        android:paddingRight="8dip"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="normal"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_marginBottom="2dip"
                android:layout_marginTop="2dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/bullet_black"/>

                    <TextView
                        android:id="@+id/favorite_end_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="normal"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/via_row"
                android:layout_marginBottom="2dip"
                android:layout_marginTop="2dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_via"/>

                    <TextView
                        android:id="@+id/favorite_via_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="normal"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_marginBottom="2dip"
                android:layout_marginTop="2dip">

                <LinearLayout
                    android:id="@+id/favorite_transport_modes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:addStatesFromChildren="true"
                    android:gravity="center_vertical"
                    android:paddingEnd="0dip"
                    android:paddingRight="0dip">

                    <ImageView
                        android:id="@+id/favorite_transport_mode_metro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/transport_metro"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/favorite_transport_mode_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dip"
                        android:paddingRight="5dip"
                        android:src="@drawable/transport_bus"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/favorite_transport_mode_train"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dip"
                        android:paddingRight="5dip"
                        android:src="@drawable/transport_train"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/favorite_transport_mode_tram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dip"
                        android:paddingRight="5dip"
                        android:src="@drawable/transport_tram_car"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/favorite_transport_mode_wax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/transport_boat"
                        android:visibility="gone"

                        />

                    <ImageView
                        android:id="@+id/favorite_transport_mode_fly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/transport_fly"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/favorite_transport_mode_nar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/transport_nar"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/favorite_transport_mode_aex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/transport_aex"
                        android:visibility="gone"
                        />
                </LinearLayout>

            </TableRow>
        </TableLayout>

        <CheckBox
            android:id="@+id/journey_star_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:button="@drawable/btn_check_star"
            android:focusable="false"/>
        <!--
        <ImageButton
            android:id="@+id/route_favorite"
            android:src="@android:drawable/star_big_off"
            android:background="@android:color/transparent"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="5dip"
            android:paddingTop="5dip"
            />
        -->
    </LinearLayout>
</LinearLayout>
