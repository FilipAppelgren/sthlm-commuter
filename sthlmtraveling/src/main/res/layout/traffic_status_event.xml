<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/list_vertical_padding"
              android:paddingTop="@dimen/list_vertical_padding"
    >

    <ImageView
        android:id="@+id/traffic_status_event_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_trip_deviation"
        />

    <TextView
        android:id="@+id/traffic_status_event_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_horizontal_padding"
        android:layout_marginStart="@dimen/list_horizontal_padding"
        android:layout_weight="1"
        tools:text="På grund av banarbeten stannar inte södergående pendeltåg vid station Årstaberg lördag 12 juni kl 09:18 – 18:40 samt söndag 13 juni kl 11:18 - 18:40. Avstigande hänvisas att åka via Älvsjö. Påstigande hänvisas att åka via Stockholms södra."
        />
</LinearLayout>
